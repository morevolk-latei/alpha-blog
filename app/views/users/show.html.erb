<h1 class="center">welcome to <%= @user.username %> page</h1>    
<div class="row">
    <div class="col-md-4 col-md-offset-4 center">
        <%= gravatar_for @user, size: 150 %>
    </div>
</div>
<h4 class="center"><%= @user.username %>'s articles </h4>

<div class="center"><%= will_paginate @user_articles %></div>

<%if @user.articles.length > 0 %>
    <%=  render "articles/article", obj: @user_articles %>
<%else%>
    <div class="message zero-articles center well row">
        <p class="font-weight-600"><%= @user.username %> has not created any article yet</p>
    </div>
<%end%>
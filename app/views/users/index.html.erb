<h1 class="center">Listings all Users</h1>

<div class="center"><%= will_paginate %></div>
<ul>
<% @users.each do |user| %>
        <div class="row">
            <div class="well col-md-4 col-md-offset-4">
                <li><%= link_to gravatar_for(user), user_path(user) %>
                <span class="username-title"><%= link_to user.username, user_path(user) %></span>
                | <span class="user-articles-count"><%= pluralize(user.articles.count, "article")%></span>
                </li>
            </div>
        </div>
<%end%>
</ul>
<%= render 'shared/errors', obj: @user%>


<div class="row">
    <div class="col-xs-12">
        <div class="form-container" >
            <%= form_for(@user, :html=>{class: "form-horizontal", role: "form"}) do |f|  %>
                <div class="form-group">
                    <%= f.label :username, class: "col-sm-2 control-label" %>
                    <div class="col-sm-7">
                        <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
                    </div>
                </div>
                
                <div class="form-group">
                    <%= f.label :email, class: "col-sm-2 control-label" %> 
                    <div class="col-sm-7">
                        <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
                    </div>
                </div>


                <div class="form-group">
                    <%= f.label :password, class: "col-sm-2 control-label" %> 
                    <div class="col-sm-7">
                        <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-sm-7 col-sm-offset-2">
                        <%= f.submit(@user.new_record? ? "Sign up":"Update Account Details" ,class: "btn btn-primary") %>
                    </div>
                </div>
            <%end%>
        </div>
    </div>
</div>
<!DOCTYPE html>
<html>
  <head>
    <title>iBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href='https://fonts.googleapis.com/css?family=Raleway:200,300,400,500,600,700,800,900' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Oswald:200,300,400,500,600,700' rel='stylesheet' type='text/css'>
  </head>

  <body>
        <%= render 'layouts/navigation'%>
        <%= render 'layouts/messages'%>
        <div class="container">
        <%= yield %>
        </div>
        <%= render 'layouts/footer' %>
  </body>
</html>
